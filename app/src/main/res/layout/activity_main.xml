<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/nav_bar_bottom"
        >
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/nav_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">

            <RelativeLayout
                android:id="@+id/home_relative"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/home_icon"
                    />

                <TextView
                    android:layout_below="@id/home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:layout_centerHorizontal="true"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/shopping_relative"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/shopping_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/shopping_bag_icon"
                    />

                <TextView
                    android:layout_below="@id/shopping_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="@string/shopping"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/event_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/event_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/events_icon"
                    />

                <TextView
                    android:layout_below="@id/event_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:text="@string/events"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/about_relative"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/about_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/about_us_icon"
                    />

                <TextView
                    android:layout_below="@id/about_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/about"
                    android:layout_marginTop="4dp"
                    android:textSize="11sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    />


            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>